@model Orders

@{
    ViewData["Title"] = "Update";
}


    <form class="form-group" asp-controller="Order" asp-action="Update" method="post">

        <input hidden asp-for="@Model.id" />
        <input hidden asp-for="@Model.book_title" />
        <input hidden asp-for="@Model.user_name" />
        <input hidden asp-for="@Model.price" />
        <input hidden asp-for="@Model.quantity"/>

        <div class="ml-3">
            @if (Model.isDelivered)
            {
                <input type="checkbox" asp-for="@Model.isDelivered" checked />
            }
            else
            {
                <input type="checkbox" asp-for="@Model.isDelivered" />
            }
            <label asp-for="@Model.isDelivered" class="form-check-label">Is Delivered?</label>
        </div>


        <div class="form-group m-4">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>