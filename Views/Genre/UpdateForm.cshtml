@model Genre

@{
    ViewData["Title"] = "Update";
}


<form class="form-group" asp-controller="Genre" asp-action="Update" method="post" >

    <input hidden asp-for="@Model.id" />

    <div class="form-group">
        <div class="col-md-10">
            <label asp-for="@Model.name">Name</label>
            <input asp-for="@Model.name" class="form-control col-5" placeholder="Name" />
            <span asp-validation-for="@Model.name"></span>
        </div>
    </div>

    <div class="form-group m-4">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>