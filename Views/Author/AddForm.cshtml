@model AuthorVM

@{
    ViewData["Title"] = "Add";
}


<form class="form-group" asp-controller="Author" asp-action="Add" method="post" enctype="multipart/form-data">


    <div class="form-group">
        <div class="col-md-10">
            <label asp-for="author.name">Name</label>
            <input asp-for="author.name" class="form-control col-5" placeholder="Title" />
            <span class="text-danger font-italic"  asp-validation-for="author.name"></span>
        </div>
    </div>

    <div class="form-group row w-25 ml-1">
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="file" asp-for="image" accept="image/*" class="form-control custom-file-input" />
                <label class="custom-file-label">Chose a file....</label>
                <label class="text-danger font-italic" >@Model.fileError </label>
            </div>
        </div>
    </div>

    <div class="form-group m-4">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>