@model IEnumerable<Author>

@{
    ViewData["Title"] = "List of Authors";
}

<div class="text-center">
    <a asp-controller="Author" asp-action="AddForm" class="btn btn-outline-primary col-2 m-1">Add New </a>
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>S.N</th>
                <th>Name</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{// for printeing sn number
                int i = 0;
                var sn = i; }
            @foreach (var author in Model)
            {
                i += 1;
                sn = i;
                <tr>
                    <td>
                        @sn
                    </td>
                    <td>
                        @author.name
                    </td>
                    <td>
                        <img src="~/images/authors/@author.image_path"
                             alt="Images Icons" height="100" width="100" asp-append-version="true" />
                    </td>
                    <td>
                        <a asp-controller="Author" asp-action="ViewDetail"
                           asp-route-id="@author.id" class="btn btn-outline-success  mb-2">View</a>
                        <br />
                        <a asp-controller="Author" asp-action="UpdateForm"
                           asp-route-id="@author.id" class="btn btn-outline-primary  mb-2">Update</a>
                        <br />
                        <a asp-controller="Author" asp-action="DeletePopUp"
                           asp-route-id="@author.id" class="btn btn-outline-danger mb-2">Delete</a>
                    </td>
                </tr>
            }

        </tbody>

    </table>



</div>
